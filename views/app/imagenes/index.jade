extends ../../layout.jade
block contenido
    div(class="container")
        h1 Mis Im√°genes
        br
        for imagen in imagenes 
            .white.border.tr.large-padding
                .row 
                    .col-md-8
                        h3= imagen.title
                    .col-md-4
                        a(href="/public/imagenes/#{imagen._id}.#{imagen.extension}" class="right-space") Ver
