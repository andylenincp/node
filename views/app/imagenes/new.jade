extends ../../layout.jade
block contenido 
    div(class="container col-md-6 remove-float center-block big-top-space")
        h1 Subir nueva imagen
        br
        form(action="/app/imagenes", method="post") 
            div(class="form-group")
                label(for="title") Título
                input(type="text", name="title", placeholder="Título", id="title", class="form-control", required)
            div(class="input-group mb-3")
                div(class="custom-file")
                    label(class="custom-file-label" for="archivo") Seleccionar imagen
                    input(type="file", name="archivo", id="archivo", class="custom-file-input")
            div(class="row top-space")
                div(class="col-xs-12 col-sm-6")
                    input(type="submit", value="Guardar", class="btn btn-info")